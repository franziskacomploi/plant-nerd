<section id="userProfile">
    <div class="plants-div main-2 p-4 m-3 col-md-6">
        <div class="plant-card p-2" style="width: 30rem;">
            <h1>Welcome to {{user.username}}'s page!</h1>
            {{#if user.firstName}}
            <h3>(you can call them {{ user.firstName }}.)</h3>
            {{/if}}
            <img src={{ user.profilePic }} alt="User Photo" class="card-img-logo m-3">
            <img src="/styles/images/icon5.png" alt="Birthday Cake Icon" class="card-icon">
            <h3>{{ user.birthDate }}</h3>
            <img src="/styles/images/icon4.png" alt="Plant Icon" class="card-icon">
            <h3>{{ user.favPlant }}</h3>
            <img src="/styles/images/icon.png" alt="About User Icon" class="card-icon">
            <h3>{{ user.description }}</h3>
            <div class="profile-action-container">
                <form action="/addFriend/{{user._id}}" method="POST">
                    <button type="submit" class="btn btn-dark">Add as friend</button>
                </form>
            </div>
        </div>
    </div>


